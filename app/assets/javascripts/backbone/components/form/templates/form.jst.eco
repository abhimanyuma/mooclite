<% console.info "form options" , @%>
<div class="ui error message">
  <div class="header">Zat! You have some errors.</div>
</div> 
<div id="form-content-region"></div>
<% if @footer: %>
  <footer>
  <% if @buttons:  %>
    <div class="floated column" id="footer-div">
    <% for button in @buttons: %>
      <button data-form-button="<%= button.type %>" class="ui <%= button.className %> button"><%= button.text %></button>
    <% end %>
  </div>
  <% end %>
  </footer>
<% end %>